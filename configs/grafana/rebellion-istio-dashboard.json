{
  "dashboard": {
    "title": "Rebellion Istio Gateway Metrics",
    "tags": ["rebellion", "istio", "gateway"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Gateway Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{cluster=\"rebellion\",reporter=\"destination\"}[5m])) by (destination_service_name)",
            "legendFormat": "{{destination_service_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Gateway Request Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{cluster=\"rebellion\",reporter=\"destination\",response_code!~\"5.*\"}[5m])) / sum(rate(istio_requests_total{cluster=\"rebellion\",reporter=\"destination\"}[5m])) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Gateway Response Time (P50, P90, P99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(istio_request_duration_milliseconds_bucket{cluster=\"rebellion\"}[5m])) by (le))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(istio_request_duration_milliseconds_bucket{cluster=\"rebellion\"}[5m])) by (le))",
            "legendFormat": "P90"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(istio_request_duration_milliseconds_bucket{cluster=\"rebellion\"}[5m])) by (le))",
            "legendFormat": "P99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Gateway Errors by Status Code",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{cluster=\"rebellion\",response_code=~\"4.*|5.*\"}[5m])) by (response_code)",
            "legendFormat": "{{response_code}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Gateway Bandwidth",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(istio_request_bytes_sum{cluster=\"rebellion\"}[5m]))",
            "legendFormat": "Inbound"
          },
          {
            "expr": "sum(rate(istio_response_bytes_sum{cluster=\"rebellion\"}[5m]))",
            "legendFormat": "Outbound"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(envoy_cluster_upstream_cx_active{cluster=\"rebellion\"})",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "schemaVersion": 16,
    "version": 1
  }
}

